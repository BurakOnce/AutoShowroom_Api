@model CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/Admin/Index.cshtml";
}
<h1>Yeni Service Ekleme Sayfası</h1>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Service Ekleme Sayfası</h6>
                <form method="post">
                    <label>Service Adı</label>
                    <input type="text" asp-for="ServiceName" class="form-control" />
                    </br/>
                    <button class="btn btn-primary">Service'i' Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>


